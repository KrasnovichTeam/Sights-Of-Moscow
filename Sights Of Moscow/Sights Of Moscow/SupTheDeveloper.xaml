        <StackLayout>
            <Label 
                FontAttributes="Bold" 
                HorizontalOptions="Center"
                TextColor="Black"
                Text="SUPPORT THE DEVELOPER" 
                FontSize="17" 
                HorizontalTextAlignment="Center"
                Margin="0,0,60,0"/>
