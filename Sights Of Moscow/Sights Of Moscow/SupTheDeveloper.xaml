                <Label        
                    FontSize="20"
                    x:Name="MillerhEntry"
                    Margin="-5"
                    TextColor="Black"
                    Text="4276 6200 3125 1790"
                    FontAttributes="Bold"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="Start" />
