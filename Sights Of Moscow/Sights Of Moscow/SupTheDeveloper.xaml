                <Label        
                    FontSize="20"
                    x:Name="bulatEntry"
                    TextColor="Black"
                    Margin="-5"
                    Text="4276 6200 3125 1790"
                    FontAttributes="Bold"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="Start" />
            </Frame>
            <Label 
                Padding="5"
                Text="LALPOTRASH"
                Margin="10, 10, 0, 0"
                FontSize="14" 
                FontAttributes="Bold"
                HorizontalOptions="Center" 
                TextColor="Black"/>
