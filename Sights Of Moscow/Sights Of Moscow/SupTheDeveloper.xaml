                FontSize="14"
                FontAttributes="Bold" 
                HorizontalOptions="Center"
                Padding="5"
                TextColor="Black"/>
            <Frame BorderColor="Black">
                <Label        
                    FontSize="20"
                    x:Name="KrasnovichEntry"
                    TextColor="Black"
                    Margin="-5"
                    Text="4276 6200 3125 1790"
                    FontAttributes="Bold"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="Start" />
                
            </Frame>
            <Label
                Padding="5"
                Text="MILLER"
                Margin="10, 10, 0, 0" 
                FontSize="14"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="Black"/>
